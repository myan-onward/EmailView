@page "/previewrule/{ruleId}"

@if (LoggedIn == false)
{
    <p>Not logged into a mailbox.</p>
    <NavLink href="account/login" class="btn btn-link"><span class="oi oi-account-logout" aria-hidden="true"></span> Login
    </NavLink>
}
else
{
    @if (messages == null)
    {
        <p><em>Loading emails...</em></p>
    }
    else
    {
        @* <h4>Conditions of Rule @ruleId</h4>
        <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Condition</th>
                        <th>Operator</th>
                        <th>OnThis</th>
                    </tr>
                </thead>
                <tbody>
                    <Virtualize Items="@previewRule.Conditions" Context="cnd">
                        <tr>
                            <td>@cnd.Id</td>
                            <td>@cnd.Condition</td>
                            <td>@cnd.Operator</td>
                            <td>@cnd.OnThis</td>
                        </tr>
                    </Virtualize>
                </tbody>
            </table> *@

        <table class="table table-striped table-bordered table-hover table-sm">
            <thead><h4>Preview of Rule @ruleId</h4></thead>
            <tbody>
                <Virtualize Items="@previewMsgs" Context="mi">
                    <tr>
                        <td>
                            <div class="container">
                                <div class="row align-items-start justify-content-start">
                                    <div class="col-1"></div>
                                    <div class="col-6"><strong>@mi.FromSimple</strong></div>
                                    <div class="col-3">@mi.Summary.Envelope.Date</div>
                                </div>
                                <div class="row align-items-center justify-content-start">
                                    <div class="col-1"></div>
                                    <div class="col-9"><p class="lead">@mi.Summary.Envelope.Subject</p></div>
                                </div>
                                <div class="row align-items-end justify-content-start">
                                    <div class="col-1"><small class="text-muted">@mi.Summary.UniqueId</small></div>
                                    <div class="col-9"><p class="text-muted">...Preview Text...</p></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </Virtualize>
            </tbody>
        </table>       
    }
}